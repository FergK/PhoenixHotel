<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?> 

<!--@author Fergus Kelley-->

<GridPane fx:id="employeesPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prms.EmployeesTabController" hgap="20" vgap="20" maxWidth="Infinity">

    <padding>
        <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
    </padding>
    
    <GridPane hgap="10" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label text="Manage Employees" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
        <Label text="Enter values to create a new employee profile,&#xD;or select an employee to modify or remove" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
        
        <Label text="First name: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="modifyFirstNameField" promptText="first name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Last name: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="modifyLastNameField" promptText="last name" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Job title: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ChoiceBox fx:id="modifyJobTitleChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="4" maxWidth="Infinity"/>
        
        <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="modifyUsernameField" promptText="username" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        
        <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <PasswordField fx:id="modifyPasswordField" promptText="password" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        
        <Label text="Confirm PW: " GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <PasswordField fx:id="confirmPasswordField" promptText="confirm password" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2" spacing="10" alignment="center">
            <fx:define>
                <ToggleGroup fx:id="toggleGroup"/>
            </fx:define>
            <children>
                <RadioButton text="Create" toggleGroup="$toggleGroup" selected="true" />
                <RadioButton text="Modify" toggleGroup="$toggleGroup" />
                <RadioButton text="Remove" toggleGroup="$toggleGroup" />
            </children>
        </HBox>
        
        <Button fx:id="modifyButton" text="Apply" onAction="#handleEmployeeApplyButtonPress" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2" maxWidth="Infinity"/>
    </GridPane>
    
    <TableView fx:id="employeesTable" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="2" GridPane.hgrow="always" GridPane.vgrow="always" minWidth="400" maxWidth="Infinity">
        <columns>
             <TableColumn fx:id="firstNameCol" text="First Name">
                 <cellValueFactory><PropertyValueFactory property="firstName" /></cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="lastNameCol" text="Last Name">
                 <cellValueFactory><PropertyValueFactory property="lastName" /></cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="jobTitleCol" text="Job Title">
                 <cellValueFactory><PropertyValueFactory property="jobTitle" /></cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="usernameCol" text="Username">
                 <cellValueFactory><PropertyValueFactory property="username" /></cellValueFactory>
             </TableColumn>
        </columns>    
    </TableView>
    
</GridPane>
