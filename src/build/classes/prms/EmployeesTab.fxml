<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?> 

<!--@author Fergus Kelley-->

<GridPane fx:id="employeesPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prms.EmployeesTabController" hgap="20" vgap="20" >

    <padding>
        <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
    </padding>
    
    <GridPane hgap="10" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="always" GridPane.vgrow="always">
        <Label text="Modify Employee" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
        <Label text="Select an employee from the list to the right" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
        
        <Label text="First name: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="modifyFirstNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Last name: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="modifyLastNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Job title: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ChoiceBox fx:id="modifyJobTitleChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="4" maxWidth="Infinity"/>
        
        <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="modifyUsernameField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        
        <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <PasswordField fx:id="modifyPasswordField" promptText="password" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        
        <Button fx:id="modifyButton" text="Modify" onAction="#handleRemoveButtonPress" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" maxWidth="Infinity" />
        <Button fx:id="removeButton" text="Remove" onAction="#handleModifyButtonPress" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2" maxWidth="Infinity" />
    </GridPane>
    
    <GridPane hgap="10" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.hgrow="always" GridPane.vgrow="always">
        <Label text="Create New Employee" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
        
        <Label text="First name: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="createFirstNameField" promptText="first name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Last name: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="createLastNameField" promptText="last name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Job title: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ChoiceBox fx:id="createJobTitleChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="3" maxWidth="Infinity"/>
        
        <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="createUsernameField" promptText="username" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        
        <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <PasswordField fx:id="createPasswordField" promptText="password" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        
        <Button fx:id="createButton" text="Create" onAction="#handleCreateButtonPress" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" maxWidth="Infinity"/>
    </GridPane>
    
    <TableView fx:id="employeesTable" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="2" GridPane.hgrow="always" GridPane.vgrow="always">
        <columns>
             <TableColumn fx:id="firstNameCol" text="First Name">
                 <cellValueFactory><PropertyValueFactory property="firstName" /></cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="lastNameCol" text="Last Name">
                 <cellValueFactory><PropertyValueFactory property="lastName" /></cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="jobTitleCol" text="Job Title">
                 <cellValueFactory><PropertyValueFactory property="jobTitle" /></cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="usernameCol" text="Username">
                 <cellValueFactory><PropertyValueFactory property="username" /></cellValueFactory>
             </TableColumn>
        </columns>    
    </TableView>
    
</GridPane>
